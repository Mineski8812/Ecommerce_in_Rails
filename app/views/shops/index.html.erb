<p id="notice"><%= notice %></p>



<div class="large-container center-block">

  <h1>Tiendas</h1>

<div class="container">
  <table border="1" class="table table-striped table-bordered" style="width: 1000px;">

    <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.Name %></td>
        <td><%= shop.Address %></td>
        <td><%= link_to 'Mostrar', shop%> |</td>
        <td><%= link_to 'Editar', edit_shop_path(shop) %> |</td>
        <td><%= link_to 'Eliminar', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>



  <%#= link_to 'Nueva tienda', new_shop_path %>
</div>


