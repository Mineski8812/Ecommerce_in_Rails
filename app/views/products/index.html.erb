<div class="large-container center-block">
  <p id="notice"><%= notice %></p>

  <h1>Productos</h1>
  <div class="container">
    <table border="1" class="table table-striped table-bordered" style="width: 1000px;">
      <thead>
      <tr>
        <th>Nombre</th>
        <th>Fecha caducidad</th>
        <th>Descripcion</th>
        <th>Almacen</th>
        <th>Cantidad</th>
        <th colspan="5">Acciones</th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.Name %></td>
          <td><%= product.EndingDate %></td>
          <td><%= product.Description %></td>
          <td><%= product.stock.Name %> </td>
          <td><%= product.cant%> </td>
          <td><%= link_to 'Show', product, class: "btn btn-sm btn-info" %> |</td>
          <td><%= link_to 'Edit', edit_product_path(product) ,class: "btn btn-sm btn-warning" %> |</td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-sm btn-danger" %> |</td>
          <td><%=link_to 'Realizar pedido', order_request_path(product),class: "btn btn-sm btn-success" %> |</td>
          <td><%= link_to 'Pedidos', orders_products_path(product) ,class: "btn btn-sm btn-secondary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>



  <br>

  <%= link_to 'New Product', new_product_path %>
</div>


